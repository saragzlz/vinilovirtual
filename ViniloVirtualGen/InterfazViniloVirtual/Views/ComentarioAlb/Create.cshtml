@model InterfazViniloVirtual.Models.ComentarioAlbViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Deja tu comentario</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Texto" class="control-label">Comentario:</label>
                    <textarea asp-for="Texto" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="Texto" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-3">
                    <div class="d-flex justify-content-between">
                        <a href="javascript:history.go(-1);" class="btn btn-secondary rounded-pill">Atrás</a>
                        <button type="submit" class="btn btn-primary rounded-pill">Publicar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
