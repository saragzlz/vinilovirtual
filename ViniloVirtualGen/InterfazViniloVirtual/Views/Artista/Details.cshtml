@model InterfazViniloVirtual.Models.ArtistaViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    IEnumerable<AlbumViewModel> albumesArtista = (IEnumerable<AlbumViewModel>)ViewData["albumesArtista"];
}

<h1>@Html.DisplayFor(model => model.nombre)</h1>

<div>
    @if (Model != null && Model.imagen != null)
    {
        <td class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.imagen)" height="150" width="150" />
        </td>
    }
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descripcion)
        </dd>
    </dl>
</div>

<h2>Albumes del Artista</h2>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in albumesArtista)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 card" style="display=" flex"; justify-content:center width: 18rem;">
                @if (Model != null && Model.imagen != null)
                {
                    <img src="@item.Portada" class="card-img-top" alt="@item.Titulo">
                    <div class="card-body">
                        <h5 class="card-title">@item.Titulo</h5>
                    </div>
                }
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id}) |
    <a asp-action="Index">Back to List</a>
</div>
