@model IEnumerable<InterfazViniloVirtual.Models.ArtistaViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsuarioViewModel user =   (UsuarioViewModel)ViewData["usuario"];

}

<p>
    <a asp-action="Create">Crear nuevo artista</a>
</p>
<br />
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 card" style="display=" flex"; justify-content:center width: 18rem;">
                @if (item != null && item.imagen != null)
                {
                    <a href="/Artista/Details/@item.id">
                        <img src="@item.imagen" class="card-img-top" alt="@item.imagen">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@item.nombre</h5>
                    </div>
                }
            </div>
        }
    </div>
</div>
