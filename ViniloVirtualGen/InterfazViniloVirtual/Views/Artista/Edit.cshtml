@model InterfazViniloVirtual.Models.ArtistaViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Editar artista</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control rounded-pill" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control rounded-pill" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fichero" class="control-label"></label>
                <input asp-for="Fichero" type="file" class="form-control rounded-pill" />
            </div>

            <div class="form-group d-flex justify-content-between">
             <a asp-action="Index" class="btn btn-secondary rounded-pill">cancelar</a>
                <input type="submit" value="Guardar" class="btn btn-primary rounded-pill" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}