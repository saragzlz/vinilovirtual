@using ViniloVirtualGen.ApplicationCore.Enumerated.ViniloVirtual
@model InterfazViniloVirtual.Models.UsuarioViewModel



@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cambiar Contraseña</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CambiarPass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Escriba su contraseña anterior</label>
                <input asp-for="PassAntigua" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label class="control-label">Escriba su nueva contraseña</label>
                <input asp-for="PassNew" class="form-control" type="password" />
                <span asp-validation-for="PassNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Vuelva a escribir la contraseña</label>
                <input asp-for="PassCheck" class="form-control" type="password" />
                <span asp-validation-for="PassCheck" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Me"><button type="button" class="btn btn-danger">Cancelar</button></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
