@using ViniloVirtualGen.ApplicationCore.Enumerated.ViniloVirtual
@model InterfazViniloVirtual.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Cambiar Contraseña</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="CambiarPass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Escriba su contraseña anterior</label>
                <input asp-for="PassAntigua" class="form-control rounded-pill" type="password" />
            </div>
            <div class="form-group">
                <label class="control-label">Escriba su nueva contraseña</label>
                <input asp-for="PassNew" class="form-control rounded-pill" type="password" />
                <span asp-validation-for="PassNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Vuelva a escribir la contraseña</label>
                <input asp-for="PassCheck" class="form-control rounded-pill" type="password" />
                <span asp-validation-for="PassCheck" class="text-danger"></span>
            </div>
           

            
            <div class="form-group mt-2">
                <a asp-action="Me" class="mr-2"><button type="button" class="btn btn-secondary rounded-pill">Cancelar</button></a>
                <input type="submit" value="Guardar" class="btn btn-primary rounded-pill" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}