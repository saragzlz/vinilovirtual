@using ViniloVirtualGen.ApplicationCore.Enumerated.ViniloVirtual
@model InterfazViniloVirtual.Models.UsuarioViewModel



@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cambiar estado del usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CambiarEstado">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <br />
                @Html.DropDownListFor(m => m.Estado,
                         new SelectList(Enum.GetValues(typeof(EstadoUsuarioEnum))),
                         "Selecciona el estado")
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Details"><button type="button" class="btn btn-danger">Cancelar</button></a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
