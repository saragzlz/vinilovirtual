@model InterfazViniloVirtual.Models.loginUsuarioViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Agregado margen superior mt-4 -->
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center">Bienvenido a Vinilo Virtual</h1>

            <h4 class="text-center">Por favor, identifíquese:</h4>

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control rounded-pill" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Pass" class="control-label"></label>
                    <input asp-for="Pass" class="form-control rounded-pill" />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group ">
                    <input type="submit" value="Enviar" class="btn btn-primary rounded-pill" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
