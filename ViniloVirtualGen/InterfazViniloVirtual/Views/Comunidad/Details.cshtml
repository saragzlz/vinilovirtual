@model InterfazViniloVirtual.Models.ComunidadViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<ComentarioComViewModel> comments = (IEnumerable<ComentarioComViewModel>)ViewData["Comentarios"];
}

<h1>Details</h1>

<div>
    <h4>ComunidadViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumMiembros)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumMiembros)
        </dd>
    </dl>
    <h4>Comentarios</h4>
</div>
@foreach (var it in comments)
{
    <div class="card" style="width: 18rem;">

        <div class="card-body">
            <h5 class="card-title">@it.NombreUsuario</h5>
            <p class="card-text">@it.Texto</p>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a> |
    @Html.ActionLink("Comentar","Create","ComentarioCom", new {id = Model.Id})
</div>
