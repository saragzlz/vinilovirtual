@model IEnumerable<InterfazViniloVirtual.Models.ComunidadViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsuarioViewModel user =   (UsuarioViewModel)ViewData["usuario"];
}

<p>
    <a asp-action="Create">Crear nueva comunidad</a>
</p>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 card" style="display=" flex"; justify-content:center width: 18rem;">
                @if (item != null && item.Imagen != null)
                {
                    <a href="/Comunidad/Details/@item.Id">
                        <img src="@item.Imagen" class="card-img-top" alt="@item.Imagen">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                    </div>
                }
            </div>
        }
    </div>
</div>
