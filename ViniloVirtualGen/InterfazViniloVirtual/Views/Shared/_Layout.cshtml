<!DOCTYPE html>
<html lang="en">

@using Microsoft.AspNetCore.Http

@{
    UsuarioViewModel usuario = Context.Session.Get<UsuarioViewModel>("usuario");
    string nombre = "";
    if (usuario != null)
    {
        nombre = usuario.Nombre;
    }
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InterfazViniloVirtual</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InterfazViniloVirtual.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/c978cb0a63.js" crossorigin="anonymous"></script>
  
    
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@700&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a style="color:#fff" class="navbar-brand" asp-area="" asp-controller="Album" asp-action="Index">Vinilo Virtual</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--Cambiar a comprobar tipo de usuario cuando esté listo-->
                <!--Usuario Normal-->
                @if (usuario == null)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-center">
                        <ul class="navbar-nav mx-auto">
                            <!-- La clase mx-auto centra la lista horizontalmente -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Album" asp-action="Index">
                                    <i class="fas fa-search"></i> Explorar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Album"
                                   asp-action="Index">
                                    <i class="fa-solid fa-meteor"></i> Descubrir
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Artista"
                                    asp-action="Index">
                                    <i class="fa-solid fa-compact-disc"></i> Artistas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Comunidad"
                                    asp-action="Index">
                                    <i class="fa-regular fa-comments"></i> Comunidades
                                </a>
                            </li>
                            <!--
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>-->
                            <!-- Identifícate -->
                            <li style="margin-left:60px" class="nav-item">
                                <a class="nav-link btn rounded-pill" asp-area="" asp-controller="Usuario" asp-action="Login">Identifícate</a>
                            </li>

                            <!-- Regístrate con un margen derecho de 2 unidades -->
                            <li style="margin-left:10px" class="nav-item ml-auto">
                                <a class="nav-link btn rounded-pill" asp-area="" asp-controller="Usuario" asp-action="Register">Regístrate</a>
                            </li>
                        </ul>
                    </div>
                }
                <!--Cambiar a comprobar tipo de usuario cuando esté listo-->
                <!--Admin-->

                 @if (usuario != null)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Album"
                                   asp-action="Index">Explorar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Album"
                                   asp-action="Index">Descubrir</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Artista"
                                    asp-action="Index">Artistas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Comunidad"
                                    asp-action="Index">Comunidades</a>
                            </li>
                            @if (usuario == null || usuario.Tipo == "A")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario"
                                        asp-action="Index">Usuarios</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario"
                                   asp-action="Signout">Cerrar Sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario"
                                    asp-action="Me">Mi Perfil</a>
                            </li>
                            <!--
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>-->
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color:#17IE26" class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Vinilo Virtual - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>